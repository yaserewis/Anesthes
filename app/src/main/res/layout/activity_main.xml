
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Anesthetic Record"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="#2E7D32" />

    <Button
        android:id="@+id/btnPreoperative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preoperative Assessment"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnHandover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ICU/Ward to OR Handover"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnOperative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Operative Notes"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnPostoperative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Postoperative Recommendations"
        android:padding="16dp"
        android:textSize="16sp" />

</LinearLayout>

